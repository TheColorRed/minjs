{
    "definitions": {
        "target": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            ]
        },
        "actions": {
            "enum": [
                "move-to", "move-from",
                "color-to", "color-from",
                "background-color-to", "background-color-from",
                "fade-to", "fade-from",
                "scale-to", "scale-from",
                "skew-to", "skew-from"
            ]
        }
    },
    "type": "object",
    "properties": {
        "animations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "trigger": {
                        "type": "string",
                        "description": "The value that will trigger this animation. This can either be a built-in JavaScript event or a custom event.",
                        "anyOf": [
                            {
                                "enum": [
                                    "click", "mouseover", "mouseout", "mouseenter", "mouseleave"
                                ]
                            },
                            {
                                "pattern": "[a-zA-Z0-9]+"
                            }
                        ]
                    },
                    "target": {
                        "$ref": "#/definitions/target",
                        "description": "The target(s) that trigger the animation. If \"apply\" is not set, the animations are applied to the current item."
                    },
                    "apply": {
                        "$ref": "#/definitions/target",
                        "description": "The optional target(s) to apply the animation to"
                    },
                    "speed": {
                        "type": "string",
                        "description": "The speed of the animation."
                    },
                    "action": {
                        "type": "array",
                        "description": "The action(s) to be applied to the object(s).",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "$ref": "#/definitions/actions",
                                    "description": "The action name to be applied to the object(s)."
                                },
                                "parameters": {
                                    "type": "array"
                                }
                            },
                            "required": ["name", "parameters"]
                        }
                    },
                    "property": {
                        "type": "string",
                        "description": "The property to affect (opacity, height, width, etc.)."
                    }
                },
                "required": ["target", "trigger"]
            }
        }
    }
}